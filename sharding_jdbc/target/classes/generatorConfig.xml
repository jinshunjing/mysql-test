<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!--  xxx   Database -->
    <context id="server"  targetRuntime="MyBatis3">

        <!-- plugin -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <!-- generate comment -->
        <commentGenerator>
            <property name="suppressDate" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="${mybatis.generator.jdbcURL}" userId="${mybatis.generator.jdbcUserId}" password="${mybatis.generator.jdbcPassword}" >
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- generate Model -->
        <javaModelGenerator  targetPackage="org.jim.sharding.dal.dataobject" targetProject="src/main/java" >
            <property name="trimStrings" value="true" />
        </javaModelGenerator>


        <!-- generate xml -->
        <sqlMapGenerator targetPackage="org.jim.sharding.dal.mapper" targetProject="src/main/resources">
        </sqlMapGenerator>

        <!-- generate Mapper -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="org.jim.sharding.dal.dao" targetProject="src/main/java">
        </javaClientGenerator>

        <table tableName="t_order">
            <property name="useActualColumnNames" value="false"/>
            <!--<generatedKey column="id" sqlStatement="MySql" identity="true"/>-->
        </table>

    </context>

</generatorConfiguration>
